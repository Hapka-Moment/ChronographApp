<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Базовая тема -->
    <style name="Theme.ChronographApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/glass_primary</item>
        <item name="colorPrimaryVariant">@color/glass_primary_variant</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorSecondary">@color/glass_secondary</item>
        <item name="colorSecondaryVariant">@color/glass_secondary_variant</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Material Components -->
        <item name="materialButtonStyle">@style/Widget.ChronographApp.Button</item>
        <item name="cardViewStyle">@style/Widget.ChronographApp.CardView</item>
    </style>

    <!-- Стиль кнопок -->
    <style name="Widget.ChronographApp.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">26dp</item>
        <item name="strokeColor">@color/glass_white_30</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="backgroundTint">@color/glass_white_10</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Стиль карточек -->
    <style name="Widget.ChronographApp.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/glass_white_20</item>
        <item name="strokeColor">@color/glass_white_30</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardCornerRadius">28dp</item>
        <item name="cardElevation">0dp</item>
    </style>
</resources>