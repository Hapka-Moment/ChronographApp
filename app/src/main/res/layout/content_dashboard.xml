<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8f9fa"
    tools:context=".MainActivity">

    <!-- Карточка состояния подключения (кликабельная) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/connectionCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/connectionStatusIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_bluetooth_disconnected"
                android:tint="#757575" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/connectionStatusText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Не подключено"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/deviceNameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HC-05 хронограф"
                    android:textSize="12sp"
                    android:textColor="#757575"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Подсказка действия -->
            <TextView
                android:id="@+id/connectionHintText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Нажмите для подключения"
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:padding="8dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Карточка основных показателей -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ТЕКУЩИЙ ВЫСТРЕЛ"
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:layout_marginBottom="16dp" />

            <!-- Скорость и энергия в одной строке -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">

                <!-- Скорость -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="СКОРОСТЬ"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/velocityText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:textSize="42sp"
                        android:textColor="#2196F3"
                        android:textStyle="bold"
                        android:layout_marginTop="8px"
                        android:layout_marginBottom="4px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="м/с"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                </LinearLayout>

                <!-- Разделитель -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#e0e0e0" />

                <!-- Энергия -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ЭНЕРГИЯ"
                        android:textSize="12sp"
                        android:textColor="#757575"
                        android:textAllCaps="true"
                        android:letterSpacing="0.05" />

                    <TextView
                        android:id="@+id/energyText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:textSize="42sp"
                        android:textColor="#4CAF50"
                        android:textStyle="bold"
                        android:layout_marginTop="8px"
                        android:layout_marginBottom="4px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Дж"
                        android:textSize="14sp"
                        android:textColor="#757575" />

                </LinearLayout>
            </LinearLayout>

            <!-- Вторичные показатели -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <!-- Счетчик -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="#f5f5f5"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="СЧЕТЧИК"
                        android:textSize="10sp"
                        android:textColor="#757575"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/shotCountText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="24sp"
                        android:textColor="#9C27B0"
                        android:textStyle="bold"
                        android:layout_marginTop="4px"
                        android:layout_marginBottom="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="выстрелов"
                        android:textSize="10sp"
                        android:textColor="#757575" />

                </LinearLayout>

                <!-- Темп -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="#f5f5f5"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ТЕМП"
                        android:textSize="10sp"
                        android:textColor="#757575"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/rpmText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="---"
                        android:textSize="24sp"
                        android:textColor="#FF9800"
                        android:textStyle="bold"
                        android:layout_marginTop="4px"
                        android:layout_marginBottom="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="выстр/мин"
                        android:textSize="10sp"
                        android:textColor="#757575" />

                </LinearLayout>

                <!-- Масса -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="#f5f5f5"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="МАССА"
                        android:textSize="10sp"
                        android:textColor="#757575"
                        android:textAllCaps="true" />

                    <TextView
                        android:id="@+id/massText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.25"
                        android:textSize="24sp"
                        android:textColor="#795548"
                        android:textStyle="bold"
                        android:layout_marginTop="4px"
                        android:layout_marginBottom="2px" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="грамм"
                        android:textSize="10sp"
                        android:textColor="#757575" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Карточка управления -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="УПРАВЛЕНИЕ"
                android:textSize="12sp"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:letterSpacing="0.05"
                android:layout_marginBottom="12dp" />

            <!-- Кнопки управления в одну строку -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <!-- История -->
                <Button
                    android:id="@+id/historyButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:text="ИСТОРИЯ"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAllCaps="false"
                    android:backgroundTint="#2196F3"
                    android:textColor="#ffffff"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@android:drawable/ic_menu_agenda"
                    style="@style/Widget.AppCompat.Button"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <!-- Масса -->
                <Button
                    android:id="@+id/massButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="МАССА"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAllCaps="false"
                    android:backgroundTint="#4CAF50"
                    android:textColor="#ffffff"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@android:drawable/ic_menu_edit"
                    style="@style/Widget.AppCompat.Button"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

                <!-- Сброс -->
                <Button
                    android:id="@+id/resetButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="СБРОС"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textAllCaps="false"
                    android:backgroundTint="#f44336"
                    android:textColor="#ffffff"
                    android:drawablePadding="4dp"
                    app:drawableStartCompat="@android:drawable/ic_menu_delete"
                    style="@style/Widget.AppCompat.Button"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>