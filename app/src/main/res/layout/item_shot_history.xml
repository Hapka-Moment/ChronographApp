<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/glass_white_10"
    app:cardCornerRadius="20dp"
    app:strokeColor="@color/glass_white_20"
    app:strokeWidth="1dp"
    app:cardElevation="0dp"
    style="@style/Widget.MaterialComponents.CardView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/shotNumberText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="#1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/timestampText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="12:30:45"
            android:textSize="12sp"
            android:textColor="@color/text_hint"/>

        <TextView
            android:id="@+id/velocityText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="150.0 м/с"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/glass_blue"
            android:gravity="end"
            android:fontFamily="sans-serif-medium"/>

        <TextView
            android:id="@+id/energyText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="25.50 Дж"
            android:textSize="14sp"
            android:textColor="@color/glass_green"
            android:gravity="end"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>